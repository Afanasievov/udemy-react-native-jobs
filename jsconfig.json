{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "actions/*": ["src/store/actions/*"],
      "components/*": ["src/components/*"],
      "config/*": ["src/config/*"],
      "constants/*": ["src/constants/*"],
      "hoc/*": ["src/hoc/*"],
      "reducers/*": ["src/store/reducers/*"],
      "sagas/*": ["src/store/sagas/*"],
      "store/*": ["src/store/*"],
      "screens/*": ["src/screens/*"],
      "services/*": ["src/services/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"]
}